generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

enum FieldType {
  TEXT
  TEXTAREA
  SINGLE_SELECT
  MULTI_SELECT
}

model Field {
  id             String    @id @default(uuid())
  tenantId       String    @map("tenant_id")
  organizationId String    @map("organization_id")
  context        String
  key            String
  label          String
  type           FieldType
  required       Boolean   @default(false)

  minLength Int?    @map("min_length")
  maxLength Int?    @map("max_length")
  pattern   String?

  placeholder String?
  groupId     String  @map("group_id")
  order       Int?

  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  options FieldOption[]

  group FieldGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([tenantId, context, key])
  @@index([tenantId, context, active])
  @@map("fields")
}

model FieldOption {
  id        String   @id @default(uuid())
  fieldId   String   @map("field_id")
  value     String
  label     String
  order     Int?     @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  field Field @relation(fields: [fieldId], references: [id], onDelete: Cascade)

  @@unique([fieldId, value])
  @@index([fieldId, active])
  @@map("field_options")
}

model FieldGroup {
  id             String   @id @default(uuid())
  tenantId       String   @map("tenant_id")
  organizationId String   @map("organization_id")
  slug           String
  name           String
  order          Int?     @default(0)
  active         Boolean  @default(true)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  fields Field[]

  @@unique([tenantId, slug])
  @@index([tenantId, active])
  @@map("field_groups")
}
